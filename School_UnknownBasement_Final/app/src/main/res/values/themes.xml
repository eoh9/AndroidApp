<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Room_Escape" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>              // 상단바 지우기
        <item name="android:windowFullscreen">true</item>   // 해당 이미지 꽉 채우기
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MeterNumberPickerStyle"> //meterView를 사용할때
        <item name="mnp_min">0</item> //최소 숫자
        <item name="mnp_max">9</item> //최대 숫자
        <item name="mnp_textColor">@android:color/white</item>
        <item name="mnp_textSize">50sp</item>
        <item name="mnp_paddingHorizontal">5dp</item>
        <item name="mnp_paddingVertical">25dp</item>
    </style>

    <style name="MeterViewStyle"> //meterView를 사용할때
        <item name="mv_firstColor">@android:color/black</item>
        <item name="mv_numberOfFirst">3</item> //처음 숫자 개수
        <item name="mv_numberOfSecond">1</item> //마지막 숫자 개수
        <item name="mv_pickerStyle">@style/MeterNumberPickerStyle</item>
        <item name="mv_secondColor">@android:color/black</item>
    </style>
    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>