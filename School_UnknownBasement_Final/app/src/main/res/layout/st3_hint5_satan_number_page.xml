<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".st3_Hint5_SatanNumber">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/st3_btn_hint5ToRoot"
            android:layout_width="52dp"
            android:layout_height="65dp"
            android:layout_marginStart="339dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="340dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/st3_btn_down"
            android:backgroundTint="#970000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/st3_img_hint5"
            android:layout_width="431dp"
            android:layout_height="202dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="55dp"
            app:layout_constraintBottom_toTopOf="@+id/st3_btn_hint5ToRoot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/st3_item_hint5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>