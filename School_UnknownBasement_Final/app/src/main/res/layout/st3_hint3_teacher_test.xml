<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".st3_Hint3_Teacher">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <Button
            android:id="@+id/st3_btn_pageToTeacherDesk"
            android:layout_width="52dp"
            android:layout_height="65dp"
            android:layout_marginStart="339dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="340dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/st3_btn_down"
            android:backgroundTint="#970000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/st3_img_hint3"
            android:layout_width="630dp"
            android:layout_height="299dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/st3_btn_pageToTeacherDesk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/st3_item_hint3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>