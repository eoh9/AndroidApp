<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/st3_bg_hint_teacher_desk"
    tools:context=".st3_BG_TeacherDesk">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/st3_btn_teacherDeskToCenter"
            android:layout_width="52dp"
            android:layout_height="65dp"
            android:layout_marginStart="339dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="340dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/st3_btn_down"
            android:backgroundTint="#970000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/st3_btn_hint_teacherHint"
            android:layout_width="146dp"
            android:layout_height="63dp"
            android:layout_marginStart="139dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="19dp"
            android:background="#00FF0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/st3_btn_teacherDeskToCenter"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>